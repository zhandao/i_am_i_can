class RoleGroup < ActiveRecord::Base
  act_as_role_group

  has_and_belongs_to_many :stored_permissions,
                          join_table: '<%= group_pms_tb %>',
                          foreign_key: :<%= permission_u %>_id,
                          class_name: ':<%= permission_c %>',
                          association_foreign_key: :<%= group_u %>_id
  has_and_belongs_to_many :members,
                          join_table: '<%= group_role_tb %>',
                          foreign_key: :<%= role_u %>_id,
                          class_name: ':<%= role_c %>',
                          association_foreign_key: :<%= group_u %>_id

  default_scope { includes(:members, :stored_permissions) }
end

